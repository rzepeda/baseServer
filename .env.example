# Server Configuration
SERVER_HOST=0.0.0.0
# MCP Protocol Server Port (for Claude.ai Remote MCP Server integration)
MCP_PORT=8080
# REST API Server Port (for direct API access via curl/scripts)
REST_API_PORT=8081
LOG_LEVEL=INFO

# Cloudflare Tunnel Configuration
# IMPORTANT: Quick tunnel URLs change on every cloudflared restart!
# After restarting cloudflared, copy the new URL from terminal output and update this value.
# Example: CLOUDFLARE_TUNNEL_URL=https://calendar-computational-bring-ever.trycloudflare.com
CLOUDFLARE_TUNNEL_URL=https://your-tunnel-subdomain.trycloudflare.com

# OAuth Configuration
OAUTH_ISSUER_URL=https://your-auth-provider.com
OAUTH_AUDIENCE=your-mcp-server-audience
OAUTH_TOKEN_CACHE_TTL=60

# Optional: Development Settings
ENVIRONMENT=development

# Optional: Cloudflare Tunnel Token (for production)
# TUNNEL_TOKEN=your-cloudflare-tunnel-token
