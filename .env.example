# Server Configuration
SERVER_HOST=0.0.0.0
# MCP Protocol Server Port (for Claude.ai Remote MCP Server integration)
MCP_PORT=8080
# REST API Server Port (for direct API access via curl/scripts)
REST_API_PORT=8081
LOG_LEVEL=INFO

# Cloudflare Tunnel Configuration
# IMPORTANT: Quick tunnel URLs change on every cloudflared restart!
# After restarting cloudflared, copy the new URL from terminal output and update this value.
# CRITICAL: Must include /mcp path for Claude.ai Remote MCP Server integration
# Example: CLOUDFLARE_TUNNEL_URL=https://calendar-computational-bring-ever.trycloudflare.com/mcp
CLOUDFLARE_TUNNEL_URL=https://your-tunnel-subdomain.trycloudflare.com/mcp

# OAuth 2.0 Configuration for Bearer Token Authentication
# These variables configure the OAuth middleware to protect your MCP server endpoints.

# Base URL of the OAuth provider, e.g., https://your-oauth-provider.com
OAUTH_PROVIDER_URL=https://your-oauth-provider.com

# Client ID of your application registered with the OAuth provider
OAUTH_CLIENT_ID=your-client-id

# CRITICAL: OAuth Client Secret (sensitive).
# In production, this should be managed securely (e.g., Kubernetes Secrets).
# NEVER commit sensitive data to version control.
OAUTH_CLIENT_SECRET=your-client-secret

# Comma-separated list of authorized OAuth scopes required for accessing your service.
# Example: "read:transcripts,write:transcripts"
OAUTH_SCOPES=read:transcripts

# URL for the token validation endpoint provided by your OAuth provider.
# This is where the middleware will send the bearer token for validation.
# Example: https://your-oauth-provider.com/oauth2/v1/userinfo (for OpenID Connect)
OAUTH_VALIDATION_ENDPOINT=https://your-oauth-provider.com/validate

# Time-to-live (TTL) in seconds for caching valid OAuth tokens to reduce
# calls to the OAuth provider. Set to 0 to disable caching.
OAUTH_TOKEN_CACHE_TTL=60

# Optional: Development Settings
ENVIRONMENT=development
USE_OAUTH=True
# Set to False to use stateless HTTP mode (required for Claude.ai integration without SSE support)
USE_SSE=False


# Optional: Cloudflare Tunnel Token (for production)
# TUNNEL_TOKEN=your-cloudflare-tunnel-token
